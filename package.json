{
  "name": "@bobmatnyc/ai-code-review",
  "version": "1.1.22",
  "description": "A TypeScript-based tool for automated code reviews using AI models from Google Gemini, Anthropic Claude, and OpenRouter",
  "main": "dist/index.js",
  "bin": {
    "ai-code-review": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "local": "ts-node -r tsconfig-paths/register src/index.ts",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --collectCoverageFrom='src/utils/**/*.ts'",
    "test:model": "ts-node src/test-model.ts",
    "list:models": "ts-node src/list-models.ts",
    "test:latest": "ts-node src/test-latest.ts",
    "test:api": "ts-node src/test-api-connections.ts",
    "prepare-package": "./scripts/prepare-package.sh",
    "prepublishOnly": "npm run build",
    "local-review": "./local-ai-review.sh",
    "built-review": "./built-ai-review.sh"
  },
  "keywords": [
    "code-review",
    "gemini",
    "openrouter",
    "claude",
    "ai",
    "typescript",
    "static-analysis",
    "code-quality",
    "developer-tools"
  ],
  "author": "Robert (Masa) Matsuoka",
  "license": "MIT",
  "files": [
    "dist",
    "prompts",
    "dist/tests",
    "LICENSE",
    "README.md",
    "CHANGELOG.md",
    "VERSION.md",
    "INSTALL.md",
    ".env.example"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bobmatnyc/ai-code-review.git"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.0",
    "chalk": "^5.4.1",
    "commander": "^11.1.0",
    "dompurify": "^3.2.5",
    "dotenv": "^16.3.1",
    "glob": "^10.3.10",
    "jsdom": "^26.0.0",
    "markdown-it": "^13.0.2",
    "node-fetch": "^2.7.0",
    "yargs": "^17.7.2"
  },
  "peerDependencies": {
    "react": "*"
  },
  "devDependencies": {
    "@types/dompurify": "^3.0.5",
    "@types/jest": "^29.5.14",
    "@types/jsdom": "^21.1.7",
    "@types/markdown-it": "^13.0.7",
    "@types/node": "^20.10.5",
    "@types/node-fetch": "^2.6.12",
    "@types/yargs": "^17.0.33",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.3.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4"
  },
  "packageManager": "yarn@4.1.1+sha512.ec40d0639bb307441b945d9467139cbb88d14394baac760b52eca038b330d16542d66fef61574271534ace5a200518dabf3b53a85f1f9e4bfa37141b538a9590"
}

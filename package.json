{
  "name": "code-review",
  "version": "0.9.0",
  "description": "A TypeScript-based tool for automated code reviews using Google's Gemini 2.5 Max model",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts code-review",
    "review": "ts-node src/index.ts code-review",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:model": "ts-node src/test-model.ts",
    "list:models": "ts-node src/list-models.ts",
    "test:model-variations": "ts-node src/test-model-variations.ts",
    "test:simple": "ts-node src/test-simple.ts",
    "test:v1beta": "ts-node src/test-v1beta.ts",
    "test:v1beta-simple": "ts-node src/test-v1beta-simple.ts",
    "test:fetch": "ts-node src/test-fetch.ts",
    "test:latest": "ts-node src/test-latest.ts"
  },
  "keywords": [
    "code-review",
    "gemini",
    "ai",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@google/generative-ai": "^0.24.0",
    "@types/dompurify": "^3.0.5",
    "@types/jsdom": "^21.1.7",
    "chalk": "^5.4.1",
    "commander": "^11.1.0",
    "dompurify": "^3.2.5",
    "dotenv": "^16.3.1",
    "glob": "^10.3.10",
    "jsdom": "^26.0.0",
    "markdown-it": "^13.0.2"
  },
  "devDependencies": {
    "@types/markdown-it": "^13.0.7",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "prettier": "^3.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4"
  }
}
